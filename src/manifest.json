{
    "name": "Rosy",
    "version": "1.0",
    "description": "Numbers to sinhala words converter",
    "permissions": ["storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [{
        "run_at": "document_end",
        "all_frames": true,
        "matches": [
            "http://*/*",
            "https://*/*",
            "file://*/*"
        ],
        "js": [
            "content.js"
        ],
        "css":[
            "content.css"
        ]
    }],
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "popup.html"
    }
}